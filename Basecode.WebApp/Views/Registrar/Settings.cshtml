    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/NoLayout.cshtml";
    int successValue = (int)ViewData["Success"];
}
@using Basecode.Data
@using Basecode.Data.ViewModels
@model SettingsViewModel

<link rel="stylesheet" href="/css/TeachersPage.css" />
<div class="wrapper"> 
   @await Html.PartialAsync("./_RegistrarSideBar")
    <div class="main p-5" style="height:400px; overflow-y: auto;">
        <div class="container p-0">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item" aria-current="page"><a asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a>Settings</a></li>
                </ol>
            </nav>
            @if (successValue == 0)
            {
                <div class="alert alert-danger alert-dismissible d-flex align-items-center fade show">
                    <i class="bi-exclamation-octagon-fill"></i>
                    <strong class="mx-2">Error!</strong>@ViewData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>

            }
            else if (successValue == 1)
            {
                <div class="alert alert-success alert-dismissible d-flex align-items-center fade show">
                    <i class="bi-check-circle-fill"></i>
                    <strong class="mx-2">Success!</strong>@ViewData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @{
                Constants.ViewDataErrorHandling.Success = -1;
                Constants.ViewDataErrorHandling.ErrorMessage = null;
            }
            <h1 class="h3 mb-3">Settings</h1>
            <div class="row">
                <div class="col-md-5 col-xl-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Registrar Settings</h5>
                        </div>

                        <div class="list-group list-group-flush" role="tablist">
                            <a class="list-group-item list-group-item-action active" data-toggle="list" href="#account" role="tab">
                                School Year
                            </a>
                            <a class="list-group-item list-group-item-action" data-toggle="list" href="#password" role="tab">
                                School Information
                            </a>
                            @* <a asp-action="ManageLearnerValues" class="list-group-item list-group-item-action">
                                Learner's Value
                            </a>     *@ 
                            <a class="list-group-item list-group-item-action" data-toggle="list" href="#gradeEval" role="tab">
                                Grade Evaluation
                            </a>
                            <a class="list-group-item list-group-item-action" data-toggle="list" href="#emailService" role="tab">
                                Email Service
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-7 col-xl-8">
                    <form method="post" enctype="multipart/form-data" asp-action="UpdateSettings">
                        <input type="hidden" asp-for="Id"/>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="account" role="tabpanel">
                            <div class="card">
                                <div class="card-header">                                    
                                    <h5 class="card-title mb-0">Set school year</h5>
                                </div>
                                <div class="card-body">                                   
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label for="inputUsername">Start School Date</label>
                                                    <input type="date" class="form-control" id="inputUsername" placeholder="Username" asp-for="StartofClass">
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputUsername">End School Date</label>
                                                    <input type="date" class="form-control" id="inputUsername" placeholder="Username" asp-for="EndofClass">
                                                </div>
                                            </div>                                           
                                        </div>
                                        <button type="submit" class="btn btn-danger mt-4">Save changes</button>                                 
                                </div>
                            </div>                          
                        </div>

                        <div class="tab-pane fade" id="password" role="tabpanel">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">School Details</h5>                                   
                                    <div class="row">
                                        <div class="col"> 
                                            <h6>School Logo</h6>

                                            @if (Model.SchoolLogo == null || Model.SchoolLogo.Length <= 0)
                                            {
                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                                     class="rounded-circle img-fluid" style="width: 150px;">
                                            }
                                            else
                                            {
                                                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.SchoolLogo)" class="rounded mx-auto d-block" style="width: 100px; height:100px" alt="" />
                                            }
                                            <p>Click this button to pick a new photo</p>                                                                                           
                                            <input type="file" id="newPhotoInput" accept="image/*" asp-for="SchoolLogoRecieve" />
                                            <input type="hidden" asp-for="SchoolLogo"/>
                                            
                                        </div>
                                        <div class="col">
                                            <h6>DepEd Logo</h6>
                                            @if ( Model.DepEdLogo == null || Model.DepEdLogo.Length <= 0)
                                            {
                                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                                     class="rounded-circle img-fluid" style="width: 150px;">
                                            }
                                            else
                                            {
                                                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.DepEdLogo)" class="rounded mx-auto d-block" style="width: 100px; height:100px" alt="" />
                                            }
                                            <p>Click this button to pick a new photo</p>
                                            <input type="file" id="newPhotoInput" accept="image/*" asp-for="DepEdLogoRecieve" />
                                            <input type="hidden" asp-for="DepEdLogo" />                                        
                                        </div>
                                    </div>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="form-group">
                                            <label for="inputPasswordCurrent">School Name</label>
                                            <input type="text" class="form-control" id="" asp-for="School_Name">
                                            <span asp-validation-for="School_Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPasswordNew2">School  Administrator</label>
                                            <input type="text" class="form-control" id="" asp-for="Administrator">
                                            <span asp-validation-for="Administrator" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPasswordNew">Region</label>
                                            <input type="text" class="form-control" id="" asp-for="Region">
                                            <span asp-validation-for="Region" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPasswordNew2">Division</label>
                                            <input type="text" class="form-control" id="" asp-for="Division">
                                            <span asp-validation-for="Division" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPasswordNew2">District</label>
                                            <input type="text" class="form-control" id="" asp-for="District">
                                            <span asp-validation-for="District" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPasswordNew2">School ID</label>
                                            <input type="text" class="form-control" id="" asp-for="SchoolId">
                                            <span asp-validation-for="SchoolId" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPasswordNew2">Address</label>
                                            <input type="text" class="form-control" id="" asp-for="Address">
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-danger mt-4">Save changes</button>                                    
                                </div>
                            </div>
                        </div>
                            <div class="tab-pane fade show" id="gradeEval" role="tabpanel">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Set Grade Evaluation</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    <label for="inputUsername">Passing Grade</label>
                                                    <input type="text" class="form-control" id="inputUsername" placeholder="Enter Passing Grade" asp-for="PassingGrade">
                                                    <span asp-validation-for="PassingGrade" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputUsername">With Highest Honor Threshold</label>
                                                    <input type="text" class="form-control" id="inputUsername" placeholder="With Highest Honor Threshold" asp-for="WithHighestHonor">
                                                    <span asp-validation-for="WithHighestHonor" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputUsername">With High Honor Threshold</label>
                                                    <input type="text" class="form-control" id="inputUsername" placeholder="With High Honor Threshold" asp-for="WithHighHonor">
                                                    <span asp-validation-for="WithHighHonor" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputUsername">With Honor Threshold</label>
                                                    <input type="text" class="form-control" id="inputUsername" placeholder="With Honor Threshold" asp-for="WithHonor">
                                                    <span asp-validation-for="WithHonor" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-danger mt-4">Save changes</button>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="emailService" role="tabpanel">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">School Email</h5>
                                                                                
                                        <div class="form-group">
                                            <label for="inputPasswordNew">Email</label>
                                            <input type="email" class="form-control" id="" asp-for="SchoolEmail">
                                            <span asp-validation-for="SchoolEmail" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPasswordNew2">Password(Use the 2FA-generated password for your Gmail account to send the email.)</label>
                                            <input type="password" class="form-control" id="" asp-for="twoFPassword">
                                            <span asp-validation-for="twoFPassword" class="text-danger"></span>
                                        </div>                                     
                                        <button type="submit" class="btn btn-danger mt-4">Save changes</button>
                                    </div>
                                </div>
                            </div>
                         

                    </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
<script src="/js/Tables.js"></script>