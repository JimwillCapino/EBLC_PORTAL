@{
    ViewData["Title"] = "Registrar";
    Layout = "~/Views/Shared/NoLayout.cshtml";
    int? max = 0;
}
@using Basecode.Data.ViewModels
@model GradesDetail
<div class="wrapper">
    @await Html.PartialAsync("./_TeacherSideBar")
    <div class="main p-5">
        <h1>Submission of Grades</h1>
        <div class="row">
            <div class="col">
                <div class="table-responsive">

                    <table class="table" id="myTable">
                        <thead>
                            <tr>
                                <th scope="col">Quarter</th>
                                <th scope="col">Grade</th>
                                <th scope="col">Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var grades in Model.Grades)
                            {
                               if(grades.Quarter> max)
                                {
                                    max = grades.Quarter;
                                }
                                <tr class="bg-blue">
                                    <td class="pt-2">
                                        @grades.Quarter
                                    </td>
                                    <td class="pt-2">
                                        @grades.Grade
                                    </td>
                                    <td class="pt-2">
                                        <i class="lni lni-pencil" onclick="setGradeValue(@grades.Grade_Id,@grades.Quarter)" data-bs-toggle="modal" data-bs-target="#exampleModal"></i>
                                    </td>
                                </tr>
                                <tr id="spacing-row">
                                    <td></td>
                                </tr>
                            }                        
                        </tbody>
                    </table>                    
                </div>
            </div>
            <div class ="col">
                @using (Html.BeginForm("AddGrade", "Teacher", FormMethod.Post))
                {
                <input type="hidden" value="@Model.Subject_Id" name="Subject_Id" />
                <input type="hidden" value="@Model.Student_Id" name="Student_Id" />
                <input type="hidden" value="@(max+1)" name="Quarter" />
                <label for="inputPassword5" class="form-label">Grade</label>
                <input type="text" id="inputPassword5" name="Grade" class="form-control mb-3" required/>
                <button type="submit" class="btn btn-outline-danger" id="submit">Submit</button>
                }               
            </div>
            <script>
                var max = @max;
                var button = document.getElementById("submit");
                if(max==4)
                {
                    button.disabled = true;
                }
            </script>
        </div>
    </div>
    <!--Modal for Editing Grade Schedule-->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Enter Updated Grade</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                @using (Html.BeginForm("EditGrade", "Teacher", FormMethod.Post))
                {
                    <div class="modal-body">

                        <div class="input-group mb-3">
                            <input type="hidden" value="" name="Grade_Id" id="gradeId"/>
                            <input type="hidden" value="@Model.Subject_Id" name="Subject_Id" />
                            <input type="hidden" value="@Model.Student_Id" name="Student_Id" />
                            <input type="hidden" value="" name="Quarter" id="quarter"/>
                            <label for="inputPassword5" class="form-label mr-3">Grade</label>
                            <input type="text" id="inputPassword5" name="Grade" class="form-control mb-3" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" value="Submit" class="btn btn-danger">Save changes</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <script>
        function setGradeValue(value, quarter) {
            var hiddenbox = document.getElementById("gradeId");
            var quarterbox = document.getElementById("quarter");
            hiddenbox.value = value;
            quarterbox.value = quarter;
        }
    </script>
</div>